@{
    ViewBag.Title = "Home Page";
}

@section scripts
{
    <script src="@Url.Content("~/Scripts/script.js")"></script>
}

<input type="text" class="form-control" id="keyword" placeholder="Search for..." >
<input type="button" class="btn btn-primary" value="SEARCH" onclick="btnSearch_Click()"/>
<br/><br/>

<table id="video-list" class="table table-striped"></table>

<table class="table">
    <tr>
        <td>Id</td>
        <td>
            <input type="text" id="video-id" class="form-control"  readonly="true"/>
        </td>
    </tr>
    <tr>
        <td>Uploader</td>
        <td>
            <input type="text" id="video-uploader"  class="form-control"/>
        </td>
    </tr>
    <tr>
        <td>Title</td>
        <td>
            <input type="text" id="video-title"  class="form-control"/>
        </td>
    </tr>
    <tr>
        <td>Description</td>
        <td>
            <input type="text" id="video-description"  class="form-control"/>
        </td>
    </tr>
    <tr>
        <td>Tags</td>
        <td>
            <input type="text" id="video-tags"  class="form-control"/>
        </td>
    </tr>
    <tr>
        <td>URL</td>
        <td>
            <input type="text" id="video-url"  class="form-control"/>
        </td>
    </tr>
    <tr>
        <td>Timestamp</td>
        <td>
            <input type="text" id="video-timestamp"  class="form-control"/>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <input type="button" value="ADD NEW" class="btn btn-info"  onclick="btnAdd_Click()"/>
            <input type="button" value="UPDATE" class="btn btn-primary" onclick="btnUpdate_Click()"/>
            <input type="button" value="DELETE" class="btn btn-danger" onclick="btnDelete_Click()"/>
        </td>
    </tr>
</table>

<div id="loader-wrapper">
    <div class="loader"></div>
</div>